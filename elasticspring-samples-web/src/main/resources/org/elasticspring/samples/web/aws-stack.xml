<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:els-context="http://www.elasticspring.org/schema/context"
       xmlns:els-messaging="http://www.elasticspring.org/schema/messaging"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.elasticspring.org/schema/context
                           http://www.elasticspring.org/schema/context/elasticspring-context-1.0.xsd
                           http://www.elasticspring.org/schema/messaging
                           http://www.elasticspring.org/schema/messaging/elasticspring-messaging-1.0.xsd">

    <!-- Define global credentials for all the AWS clients -->
    <els-context:context-credentials>
        <els-context:simple-credentials access-key="${accessKey}" secret-key="${secretKey}"/>
    </els-context:context-credentials>

    <!-- Define statically the region -->
    <els-context:context-region region="EU_WEST_1" />

    <els-context:stack-configuration stack-name="AwsSampleStack" />
    <els-messaging:queue-messaging-template id="queueMessagingTemplate" />

</beans>